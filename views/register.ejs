<%- include("partials/header"); -%>
<% if(messege) {%>
  <h2  class="server-messege"><%=messege%></h2>
<% } else { -%>
  <h2  class="messege light-text"> Register</h2>
<% } %>
<div class="form-container">
  <form action="/register" method="post">
    <input class="form-input" type="text" placeholder="username" name="username" required/>
    <input class="form-input" type="password" placeholder="password" name="password" required/>

    <button class="btn small" type="submit">Register</button>
    <p class="btn small">Have an <a class="link" href="/login">  account?</a></p>
    
  </form>
</div>

